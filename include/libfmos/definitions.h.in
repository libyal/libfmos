#if !defined( _LIBFMOS_DEFINITIONS_H )
#define _LIBFMOS_DEFINITIONS_H

#include <libfmos/types.h>

#define LIBFMOS_VERSION				@VERSION@

/* The version string
 */
#define LIBFMOS_VERSION_STRING			"@VERSION@"

/* The byte order definitions
 */
enum LIBFMOS_ENDIAN
{
	LIBFMOS_ENDIAN_BIG			= (int) 'b',
	LIBFMOS_ENDIAN_LITTLE			= (int) 'l'
};

/* The security identifier (SID) authorities
 */
enum LIBFMOS_SECURITY_IDENTIFIER_AUTHORITIES
{
	LIBFMOS_AUTHORITY_NULL			= 0x00,
	LIBFMOS_AUTHORITY_WORLD			= 0x01,
	LIBFMOS_AUTHORITY_LOCAL			= 0x02,
	LIBFMOS_AUTHORITY_CREATOR		= 0x03,
	LIBFMOS_AUTHORITY_NON_UNIQUE		= 0x04,
	LIBFMOS_AUTHORITY_NT_AUTHORITY		= 0x05,

	LIBFMOS_AUTHORITY_EXCHANGE_2007		= 0x09
};

/* The access control types
 */
enum LIBFMOS_ACCESS_CONTROL_TYPES
{
	LIBFMOS_ACCESS_ALLOWED			= 0x00,
	LIBFMOS_ACCESS_DENIED			= 0x01,
	LIBFMOS_SYSTEM_AUDIT			= 0x02,
	LIBFMOS_SYSTEM_ALARM			= 0x03,
	LIBFMOS_ACCESS_ALLOWED_COMPOUND		= 0x04,
	LIBFMOS_ACCESS_ALLOWED_OBJECT		= 0x05,
	LIBFMOS_ACCESS_DENIED_OBJECT		= 0x06,
	LIBFMOS_SYSTEM_AUDIT_OBJECT		= 0x07,
	LIBFMOS_SYSTEM_ALARM_OBJECT		= 0x08,
	LIBFMOS_ACCESS_ALLOWED_CALLBACK		= 0x09,
	LIBFMOS_ACCESS_DENIED_CALLBACK		= 0x0a,
	LIBFMOS_ACCESS_ALLOWED_CALLBACK_OBJECT	= 0x0b,
	LIBFMOS_ACCESS_DENIED_CALLBACK_OBJECT	= 0x0c,
	LIBFMOS_SYSTEM_AUDIT_CALLBACK		= 0x0d,
	LIBFMOS_SYSTEM_ALARM_CALLBACK		= 0x0e,
	LIBFMOS_SYSTEM_AUDIT_CALLBACK_OBJECT	= 0x0f,
	LIBFMOS_SYSTEM_ALARM_CALLBACK_OBJECT	= 0x10,
	LIBFMOS_SYSTEM_MANDATORY_LABEL		= 0x11
};

#endif /* !defined( _LIBFMOS_DEFINITIONS_H ) */

